<Window x:Class="SIMSprojekat.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMSprojekat"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid Margin="16">
        <StackPanel>
            <TextBlock Text="ADMIN – funkcije:" FontSize="18" Margin="0,0,0,12"/>
            <Button Content="Registracija vlasnika"
            Click="OpenRegisterOwner_Click"
            Width="160" Margin="0,8,0,0"/>
            <Button Content="Unos hotela"
             Click="OpenAddHotel_Click"
               Width="160" Margin="0,8,0,0"/>
            
            <!-- kasnije žičimo dugmad na Servise -->
        </StackPanel>
        
    </Grid>
</Window>
