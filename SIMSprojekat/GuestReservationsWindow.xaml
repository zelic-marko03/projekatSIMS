<Window x:Class="SIMSprojekat.GuestReservationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Moje rezervacije"
        Height="420" Width="760"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- FILTER -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Filtriraj po statusu:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="StatusBox" Width="200" SelectionChanged="StatusBox_SelectionChanged">
                <ComboBoxItem Content="Sve" Tag=""/>
                <ComboBoxItem Content="Na čekanju" Tag="NaCekanju"/>
                <ComboBoxItem Content="Potvrđene" Tag="Potvrdjena"/>
                <ComboBoxItem Content="Odbijene/Otkazane" Tag="Odbijena"/>
            </ComboBox>
        </StackPanel>

        <!-- TABELA -->
        <DataGrid x:Name="RezGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="160"/>
                <DataGridTextColumn Header="Apartman" Binding="{Binding ApartmanIme}" Width="*"/>
                <DataGridTextColumn Header="Od" Binding="{Binding DatumOd, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="Do" Binding="{Binding DatumDo, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Razlog" Binding="{Binding RazlogOdbijanja}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- DUGMIĆI -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Otkaži" Width="120" Margin="0,0,8,0" Click="Otkazi_Click"/>
            <Button Content="Zatvori" Width="100" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
