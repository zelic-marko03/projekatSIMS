<Window x:Class="SIMSprojekat.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gost" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- FILTER -->
            <RowDefinition Height="*"/>
            <!-- TABELA -->
            <RowDefinition Height="Auto"/>
            <!-- DUGMAD DOLE -->
        </Grid.RowDefinitions>

        <!-- FILTER sa labelama (WrapPanel da sve stane u jedan red) -->
        <WrapPanel Margin="0,0,0,8" ItemHeight="44" ItemWidth="150">
            <StackPanel Width="150">
                <TextBlock Text="Ime" HorizontalAlignment="Center"/>
                <TextBox x:Name="NameBox"/>
            </StackPanel>

            <StackPanel Width="110">
                <TextBlock Text="Godina" HorizontalAlignment="Center"/>
                <TextBox x:Name="YearBox"/>
            </StackPanel>

            <StackPanel Width="110">
                <TextBlock Text="Zvezdice" HorizontalAlignment="Center"/>
                <TextBox x:Name="StarsBox"/>
            </StackPanel>

            <StackPanel Width="110">
                <TextBlock Text="Sobe" HorizontalAlignment="Center"/>
                <TextBox x:Name="RoomsBox"/>
            </StackPanel>

            <StackPanel Width="110">
                <TextBlock Text="Gosti" HorizontalAlignment="Center"/>
                <TextBox x:Name="GuestsBox"/>
            </StackPanel>

            <StackPanel Width="100">
                <TextBlock Text="Operator" HorizontalAlignment="Center"/>
                <ComboBox x:Name="OpBox">
                    <ComboBoxItem Content="&amp;"/>
                    <ComboBoxItem Content="|"/>
                </ComboBox>
            </StackPanel>

            <!-- Desno: sortiranje + filtriraj -->
            <StackPanel Width="200" Margin="8,0,0,0" HorizontalAlignment="Right">
                <CheckBox x:Name="SortStars"
                          Content="Sortiraj po zvezdicama"
                          Margin="0,0,0,6"/>
                <Button Content="Filtriraj"
                        Click="Apply_Click"
                        Padding="12,4"
                        Width="122"/>
            </StackPanel>
        </WrapPanel>

        <!-- TABELA HOTELA (bez JMBG vlasnika) -->
        <DataGrid x:Name="HotelsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Šifra"    Binding="{Binding Sifra}"              Width="90"/>
                <DataGridTextColumn Header="Ime"      Binding="{Binding Ime}"                Width="*"/>
                <DataGridTextColumn Header="Godina"   Binding="{Binding GodinaIzgradnje}"    Width="90"/>
                <DataGridTextColumn Header="Zvezdice" Binding="{Binding BrojZvezdica}"       Width="90"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- DUGMAD DOLE -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Nova rezervacija" Width="150" Margin="0,0,8,0"
                    Click="NovaRezervacija_Click"/>
            <Button Content="Moje rezervacije" Width="150" Margin="0,0,8,0"
                    Click="OpenMyReservations_Click"/>
            <Button Content="Zatvori" Width="100" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
