<Window x:Class="SIMSprojekat.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GuestWindow" Height="500" Width="800">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- FILTER -->
            <RowDefinition Height="*"/>
            <!-- TABELA -->
            <RowDefinition Height="Auto"/>
            <!-- DUGMIĆI DOLE -->
        </Grid.RowDefinitions>

        <!-- FILTER sa labelama + WrapPanel da se vidi sve -->
        <WrapPanel Margin="0,0,0,8" ItemHeight="44" ItemWidth="160">
            <StackPanel Width="160">
                <TextBlock Text="Ime" HorizontalAlignment="Center"/>
                <TextBox x:Name="NameBox"/>
            </StackPanel>

            <StackPanel Width="120">
                <TextBlock Text="Godina" HorizontalAlignment="Center"/>
                <TextBox x:Name="YearBox"/>
            </StackPanel>

            <StackPanel Width="120">
                <TextBlock Text="Zvezdice" HorizontalAlignment="Center"/>
                <TextBox x:Name="StarsBox"/>
            </StackPanel>

            <StackPanel Width="120">
                <TextBlock Text="Sobe" HorizontalAlignment="Center"/>
                <TextBox x:Name="RoomsBox"/>
            </StackPanel>

            <StackPanel Width="120">
                <TextBlock Text="Gosti" HorizontalAlignment="Center"/>
                <TextBox x:Name="GuestsBox"/>
            </StackPanel>

            <StackPanel Width="100">
                <TextBlock Text="Operator" HorizontalAlignment="Center"/>
                <ComboBox x:Name="OpBox">
                    <ComboBoxItem Content="&amp;"/>
                    <ComboBoxItem Content="|"/>
                </ComboBox>
            </StackPanel>

            <!-- Desno: sortiranje + primeni -->
            <StackPanel Width="200" Margin="8,0,0,0" HorizontalAlignment="Right">
                <CheckBox x:Name="SortStars" Content="Sortiraj po zvezdicama" Height="13" Width="142" />
                <Button Content="Primeni" Click="Apply_Click" Padding="12,4" Width="122"/>
            </StackPanel>
        </WrapPanel>

        <!-- TABELA -->
        <DataGrid x:Name="HotelsGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Šifra" Binding="{Binding Sifra}" Width="90"/>
                <DataGridTextColumn Header="Ime" Binding="{Binding Ime}" Width="*"/>
                <DataGridTextColumn Header="Godina" Binding="{Binding GodinaIzgradnje}" Width="90"/>
                <DataGridTextColumn Header="Zvezdice" Binding="{Binding BrojZvezdica}" Width="90"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- DUGMIĆI DOLE -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Nova rezervacija" Click="NovaRezervacija_Click" Width="150" Margin="0,0,8,0"/>
            <Button Content="Zatvori" Click="Close_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>