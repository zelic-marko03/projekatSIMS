<Window x:Class="SIMSprojekat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMSprojekat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="24">
        <StackPanel Width="260">
            <TextBlock Text="Prijava" FontSize="20" Margin="0,0,0,12"/>
            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailBox" Margin="0,4,0,10"/>

            <TextBlock Text="Lozinka"/>
            <PasswordBox x:Name="PassBox" Margin="0,4,0,16"/>

  
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Prijavi se" Click="Login_Click" Width="120" Height="32"/>
                <Button Content="Registruj se" Click="OpenRegister_Click" Width="120" Height="32" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
