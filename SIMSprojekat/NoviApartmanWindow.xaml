<Window x:Class="SIMSprojekat.NoviApartmanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novi apartman" Height="260" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Hotel šifra:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox   x:Name="HotelSifraBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Ime apartmana:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox   x:Name="ImeBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Broj soba:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox   x:Name="SobeBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Max gostiju:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox   x:Name="GostiBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Otkaži" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Sačuvaj" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
