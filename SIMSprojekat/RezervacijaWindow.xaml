<Window x:Class="SIMSprojekat.RezervacijaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nova rezervacija" Height="240" Width="380"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Apartman -->
        <TextBlock Text="Apartman:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox x:Name="AptBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

        <!-- Datumi -->
        <TextBlock Text="Datum od:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <DatePicker x:Name="DatumOdPicker" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Datum do:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <DatePicker x:Name="DatumDoPicker" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

        <!-- Dugmad -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Otkaži" Width="90" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Rezerviši" Width="100" Click="Rezervisi_Click"/>
        </StackPanel>
    </Grid>
</Window>
